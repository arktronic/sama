@model sama.Models.HttpEndpointViewModel

<div class="form-group">
    <label asp-for="Location" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Location" class="form-control" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="ResponseMatch" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="ResponseMatch" class="form-control" placeholder="Optional" />
        <span asp-validation-for="ResponseMatch" class="text-danger"></span>
    </div>
</div>
<div class="form-group">
    <label asp-for="StatusCodes" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="StatusCodes" class="form-control" placeholder="Optional" />
        <span asp-validation-for="StatusCodes" class="text-danger"></span>
        <p class="text-left">Default is to accept 2xx status codes and follow redirects.</p>
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <input asp-for="IgnoreCerts" />
            <label asp-for="IgnoreCerts"></label>
        </div>
    </div>
</div>
<div class="form-group">
    <label asp-for="CustomCert" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <textarea asp-for="CustomCert" rows="5" class="form-control" placeholder="Optional"></textarea>
        <span asp-validation-for="CustomCert" class="text-danger"></span>
    </div>
</div>
