@model sama.Models.Endpoint

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Endpoint</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Enabled" />
                    <label asp-for="Enabled"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ResponseMatch" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ResponseMatch" class="form-control" placeholder="Optional" />
                <span asp-validation-for="ResponseMatch" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="StatusCodes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="StatusCodes" class="form-control" placeholder="Optional" />
                <span asp-validation-for="StatusCodes" class="text-danger"></span>
                <p class="text-info">Default is to accept 2xx status codes and follow redirects.</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
